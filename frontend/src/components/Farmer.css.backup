/* Farmer Dashboard - Premium Dark Green Theme */

/* Dashboard Container */
.farmer-dashboard {
  width: 100%;
  min-height: 100vh;
  padding: 24px;
  background: var(--app-background);
  color: var(--text-primary);
}

/* Dashboard Header */
.dashboard-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 28px;
  padding-bottom: 20px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.header-left {
  flex: 1;
}

.dashboard-title {
  font-size: 2.2rem;
  font-weight: 800;
  color: #ffffff;
  margin: 0 0 6px 0;
}

.dashboard-subtitle {
  font-size: 1rem;
  color: var(--text-secondary);
  margin: 0;
}

.btn-add-crop {
  padding: 12px 20px;
  background: linear-gradient(135deg, var(--gold-400), var(--gold-200));
  color: #0c1f14;
  border: none;
  border-radius: 12px;
  font-weight: 800;
  font-size: 1rem;
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  box-shadow: var(--shadow-card);
}

.btn-add-crop:hover {
  transform: translateY(-2px);
  box-shadow: 0 16px 40px rgba(0, 0, 0, 0.28);
}

/* Metrics Grid */
.metrics-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 18px;
  margin-bottom: 32px;
}

.metric-card {
  background: rgba(255, 255, 255, 0.06);
  border: 1px solid rgba(255, 255, 255, 0.12);
  border-radius: 16px;
  padding: 20px;
  display: flex;
  align-items: center;
  gap: 16px;
  box-shadow: var(--shadow-soft);
  -webkit-backdrop-filter: blur(8px);
  backdrop-filter: blur(8px);
  transition: transform 0.2s ease, border 0.2s ease;
}

.metric-card:hover {
  transform: translateY(-4px);
  border-color: rgba(255, 255, 255, 0.2);
}

.metric-icon {
  font-size: 2.5rem;
  line-height: 1;
}

.metric-content {
  flex: 1;
}

.metric-value {
  font-size: 2rem;
  font-weight: 800;
  color: #ffffff;
  line-height: 1;
  margin-bottom: 4px;
}

.metric-label {
  font-size: 0.9rem;
  color: var(--text-secondary);
  font-weight: 600;
}

/* Dashboard Tabs */
.dashboard-tabs {
  display: flex;
  gap: 12px;
  margin-bottom: 24px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  padding-bottom: 12px;
}

.tab-btn {
  padding: 10px 18px;
  background: transparent;
  border: 1px solid rgba(255, 255, 255, 0.12);
  border-radius: 10px;
  color: var(--text-secondary);
  font-weight: 700;
  cursor: pointer;
  transition: all 0.2s ease;
}

.tab-btn:hover {
  background: rgba(255, 255, 255, 0.06);
  color: #ffffff;
}

.tab-btn.active {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.14), rgba(255, 255, 255, 0.08));
  border-color: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
}

/* Tab Content */
.tab-content {
  min-height: 400px;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
  text-align: center;
}

.empty-icon {
  font-size: 4rem;
  margin-bottom: 16px;
  opacity: 0.5;
}

.empty-state h3 {
  font-size: 1.5rem;
  margin-bottom: 8px;
  color: #ffffff;
}

.empty-state p {
  color: var(--text-secondary);
  margin-bottom: 20px;
}

/* Listings Grid */
.listings-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 20px;
}

.listing-card {
  background: rgba(255, 255, 255, 0.07);
  border: 1px solid rgba(255, 255, 255, 0.14);
  border-radius: 16px;
  padding: 20px;
  box-shadow: var(--shadow-soft);
  -webkit-backdrop-filter: blur(8px);
  backdrop-filter: blur(8px);
  transition: transform 0.2s ease, border 0.2s ease;
}

.listing-card:hover {
  transform: translateY(-6px);
  border-color: rgba(255, 255, 255, 0.24);
}

.listing-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16px;
  padding-bottom: 12px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.listing-crop {
  font-size: 1.3rem;
  font-weight: 800;
  color: #ffffff;
  margin: 0;
}

.status-badge {
  padding: 6px 12px;
  border-radius: 999px;
  font-size: 0.85rem;
  font-weight: 700;
  background: rgba(255, 255, 255, 0.12);
  color: #ffffff;
}

.status-badge.available {
  background: linear-gradient(135deg, #10b981, #34d399);
  color: #ffffff;
}

.status-badge.sold {
  background: rgba(255, 255, 255, 0.08);
  color: var(--text-secondary);
}

.listing-details {
  display: flex;
  flex-direction: column;
  gap: 10px;
  margin-bottom: 16px;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-label {
  font-size: 0.9rem;
  color: var(--text-secondary);
  font-weight: 600;
}

.detail-value {
  font-size: 0.95rem;
  color: #ffffff;
  font-weight: 700;
}

.quality-badge-inline {
  padding: 4px 10px;
  background: rgba(241, 196, 15, 0.15);
  border-radius: 8px;
  font-size: 0.85rem;
  font-weight: 700;
  color: var(--gold-400);
}

.listing-actions {
  display: flex;
  gap: 10px;
  padding-top: 12px;
  border-top: 1px solid rgba(255, 255, 255, 0.08);
}

.btn-outline {
  flex: 1;
  padding: 10px 16px;
  background: transparent;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 10px;
  color: #ffffff;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn-outline:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.3);
}

/* Analytics Placeholder */
.analytics-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px 20px;
  text-align: center;
}

.placeholder-icon {
  font-size: 5rem;
  margin-bottom: 20px;
  opacity: 0.4;
}

.analytics-placeholder h3 {
  font-size: 1.8rem;
  margin-bottom: 10px;
  color: #ffffff;
}

.analytics-placeholder p {
  color: var(--text-secondary);
  max-width: 500px;
}

/* Add Crop Section */
.add-crop-section {
  max-width: 700px;
  margin: 0 auto;
}

.add-crop-section h2 {
  color: #ffffff;
  text-align: center;
  margin-bottom: 8px;
  font-size: 1.8rem;
}

.seForm Elements for Add Crop */
.input-card {
  background: rgba(255, 255, 255, 0.06);
  border: 1px solid rgba(255, 255, 255, 0.12);
  border-radius: 16px;
  padding: 24px;
  margin-bottom: 20px;
  box-shadow: var(--shadow-soft);
  -webkit-backdrop-filter: blur(8px);
  backdrop-filter: blur(8px);
}

.input-label {
  display: block;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12px;
  font-size: 1rem;
}

.input-textarea {
  width: 100%;
  padding: 14px;
  font-size: 1rem;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 12px;
  font-family: var(--font-family);
  resize: vertical;
  background: rgba(0, 0, 0, 0.3);
  color: #ffffff;
  margin-bottom: 12px;
}

.input-textarea:focus {
  outline: none;
  border-color: var(--gold-400);
  box-shadow: 0 0 0 3px rgba(241, 196, 15, 0.1);
}

.input-textarea::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

.btn-primary {
  background: linear-gradient(135deg, var(--gold-400), var(--gold-200));
  color: #0c1f14;
  border: none;
  padding: 12px 24px;
  border-radius: 12px;
  font-weight: 800;
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  box-shadow: var(--shadow-card);
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 16px 40px rgba(0, 0, 0, 0.28);
}

.btn-large {
  width: 100%;
  padding: 14px 24px;
  font-size: 1.1rem;
}

.btn-add-listing {
  margin-top: 20px;
}

.btn-primary:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

/* Error Message */
.error-message {
  background: rgba(239, 68, 68, 0.15);
  color: #fca5a5;
  padding: 14px;
  border-radius: 12px;
  border: 1px solid rgba(239, 68, 68, 0.3);
  margin-bottom: 20px;
  font-weight: 600;
  font-size: 0.95rem;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.info-label {
  font-weight: 700;
  color: var(--text-secondary);
  font-size: 0.9rem;
}

.info-value {
  font-size: 1.2rem;
  color: #ffffff;
  font-weight: 800;
}

/* Crop Info Display */
.price-display {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.price-range,
.price-predicted {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 10px;
  border-left: 3px solid var(--gold-400);
}

.price-label {
  font-weight: 700;
  color: var(--text-secondary);
  font-size: 0.95rem;
}

.price-value {
  font-size: 1.3rem;
  font-weight: 800;
  color: #ffffff;
}

.price-value.highlight {
  color: var(--gold-400);
  font-size: 1.6rem;
}

.price-display {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.price-range,
.price-predicted {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.quality-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 12px;
  margin-bottom: 16px;
}

.quality-item {
  display: flex;
  flex-direction: column;
  gap: 6px;
  padding: 12px;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 10px;
  text-align: center;
}

.quality-label {
  font-weight: 700;
  color: var(--text-secondary);
  font-size: 0.85rem;
}

.quality-value {
  font-size: 1.4rem;
  font-weight: 800;
  color: var(--gold-400);
}

.quality-badge-container {
  display: flex;
  justify-content: center;
  padding: 12px;
  background: rgba(0, 0, 0, 0.15);
  border-radius: 10px;
}

.badge {
  display: inline-block;
  padding: 10px 20px;
  border-radius: 999px;
  font-weight: 800;
  font-size: 1rem;
}

.badge-success {
  background: linear-gradient(135deg, #10b981, #34d399);
  color: #ffffff;
  box-shadow: 0 8px 20px rgba(16, 185, 129, 0.3);
}

.badge-warning {
  background: linear-gradient(135deg, #f59e0b, #fbbf24);
  color: #ffffff;
}

.quality-badge-container {
  display: flex;
  justify-content: center;
  padding: var(--spacing-md);
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: var(--radius-md);
}

.input-wrapper {
  position: relative;
  display: flex;
  gap: 10px;
  align-items: flex-start;
  margin-bottom: 12px;
}

.input-wrapper .input-textarea {
  flex: 1;
  margin-bottom: 0;
}

.btn-mic {
  padding: 14px;
  font-size: 1.5rem;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  min-width: 52px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-mic:hover:not(:disabled) {
  background: rgba(255, 255, 255, 0.15);
  transform: scale(1.05);
}

.btn-mic:disabled {
  opacity: 0.3;
  cursor: not-allowed;
}

.btn-mic.listening {
  background: linear-gradient(135deg, #ef4444, #f87171);
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% {
    box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.7);
  }
  50% {
    box-shadow: 0 0 0 8px rgba(239, 68, 68, 0);
  }
}

.speech-status {
  font-size: 0.9rem;
  color: #34d399;
  padding: 10px;
  background: rgba(16, 185, 129, 0.15);
  border-left: 3px solid #10b981;
  margin-bottom: 12px;
  border-radius: 8px;
}

.speech-not-supported {
  font-size: 0.9rem;
  color: #fca5a5;
  padding: 10px;
  background: rgba(239, 68, 68, 0.15);
  border-left: 3px solid #ef4444;
  margin-bottom: 12px;
  border-radius: 8px;
}

/* Responsive */
@media (max-width: 900px) {
  .dashboard-header {
    flex-direction: column;
    gap: 16px;
  }

  .btn-add-crop {
    width: 100%;
  }

  .metrics-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 640px) {
  .farmer-dashboard {
    padding: 16px;
  }

  .dashboard-title {
    font-size: 1.8rem;
  }

  .metrics-grid {
    grid-template-columns: 1fr;
  }

  .listings-grid {
    grid-template-columns: 1fr;
  }

  .quality-grid {
    grid-template-columns: 1fr;
  }

  .dashboard-tabs {
    flex-wrap: wrap;
    max-width: 100%;
  }

  .section-subtitle {
    font-size: var(--font-size-base);
  }

  .info-grid,
  .quality-grid {
    grid-template-columns: 1fr;
  }

  .quality-grid {
    grid-template-columns: 1fr;
  }
}
